<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Style of the text from the List Row-->
    <style name="ListText">
        <item name="android:textSize">@dimen/list_row_text</item>
        <item name="android:padding">@dimen/list_row_padding</item>
    </style>

    <!--Style of the navigation menu header text-->
    <style name="NavHeaderTextStyle">
        <item name ="android:textSize">@dimen/nav_menu_text</item>
        <item name ="android:textColor">@color/colorNavHeaderText</item>
        <item name ="android:textStyle">bold</item>
        <item name ="android:shadowColor">@color/colorNavHeaderShadow</item>
        <item name ="android:shadowDx">0</item>
        <item name ="android:shadowDy">0</item>
        <item name ="android:shadowRadius">50</item>
    </style>

    <!--Style of the navigation menu-->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:layout_marginRight">@dimen/nav_menu_marginRight</item>
        <item name="android:layout_marginLeft">@dimen/nav_menu_marginLeft</item>
    </style>

    <!--Style of the main content margins-->
    <style name="MainContent">
        <item name="android:layout_marginLeft">@dimen/main_content_margin_LeftAndRight</item>
        <item name="android:layout_marginRight">@dimen/main_content_margin_LeftAndRight</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_TopAndBottom</item>
        <item name="android:layout_marginBottom">@dimen/main_content_margin_TopAndBottom</item>
    </style>


</resources>
